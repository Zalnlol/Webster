@model WebsterWebApp.Models.Exam

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Exam Information</h4>
    <hr />
    <table class="table">
        <tr>
           
           <th> @Html.DisplayNameFor(s=>s.ExamName)</th>
           <th></th>
           <th> Random ExamType</th>
           <th> @Html.DisplayNameFor(s=>s.ExamPass)</th>
           <th>
                @Html.DisplayNameFor(model => model.FirstCountdown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondCountdown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThirdCountdown)
            </th>
        </tr>
        <tr>
           
           <td> @Html.DisplayFor(s=>s.ExamName)</td> 
           <td>
           <td> @Html.DisplayFor(s=>s.ExamType)</td>
           <td> @Html.DisplayFor(s=>s.ExamPass)</td>
           <td>
                @Html.DisplayFor(model => model.FirstCountdown)
            </td>
            <td>
                @Html.DisplayFor(model => model.SecondCountdown)
            </td>
            <td>
                @Html.DisplayFor(model => model.ThirdCountdown)
            </td>
        </tr>
    </table>
    @{
        int a = 1;
    }
    <h4>List Question</h4>
    <h5>Part Math:</h5>
    @foreach (var item in ViewBag.math)
    {
        
        <h6><b>Question @a:</b> @item</h6>
        for (char i = 'A';i<69;i++)
        {
            <label>Answer @i:<a>........</a></label>
        }
        <br />
        <b>Correct:....</b>
        a++;
        <br />
    }
    <h5>Part General Knowledge:</h5>
    @foreach (var item in ViewBag.kn)
    {
        
        <h6><b>Question @a:</b>  @item</h6>
        for (char i = 'A';i<69;i++)
        {
            <label>Answer @i:<a>........</a></label>
        }
        <br />
         <b>Correct:....</b>
        a++;
        <br />
    }
    <h5>Part Tech:</h5>
    @foreach (var item in ViewBag.tech)
    {
        
        <h6><b>Question @a:</b> @item</h6>
        for (char i = 'A';i<69;i++)
        {
            <label>Answer @i:<a>........</a></label>
        }
        <br />
         <b>Correct:....</b>
        a++;
        <br />
    }
    
</div>
