@model WebsterWebApp.Models.RegistrationModel

@{
    ViewData["Title"] = "CreateAdminAccount";
}


        <h1 style="text-align:center">Create Admin Account</h1>

        <h4 style="text-align:center">RegistrationModel</h4>
        
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <hr />
                <form id="UserRegistrationForm" name="UserRegistrationForm" asp-action="CreateAdminAccount" asp-controller="Admin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <input asp-for="Password" class="form-control" hidden value="123456789Ab$" />
                    <input asp-for="ConfirmPassword" class="form-control" hidden value="123456789Ab$" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AcceptUserAgreement" checked /> @Html.DisplayNameFor(model => model.AcceptUserAgreement)
                        </label>
                    </div>
                    <div class="form-group" style="text-align:center">
                        <input type="submit" value="Create" name="register" id="register" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="AdminList">Back to List</a>
        </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
