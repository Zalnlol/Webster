<script>
    $(function () {
        $("#txtQuestion").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: '/Admin/Question/AutoComplete/',
                    data: { "prefix": request.term },
                    type: "POST",
                    success: function (data) {
                        response($.map(data, function (item) {
                            return item;
                        }))
                    },
                    error: function (response) {
                        alert(response.responseText)
                    },
                    failure: function (response) {
                        alert(response.responseText)
                    }
                });
            },
            minLength: 1
        });
    });
</script>

<form asp-action="Index" method="post">
    <select name="subject" onchange="check()">
        @if (ViewBag.optionSubject == null)
        {
            <option value="">All</option>
            @foreach (var item in TempData["optionSubject"] as List<String>)
            {
                <option value="@item">@item</option>
            }
        }
        else
        {
            <option value="">All</option>
            foreach (var item in TempData["optionSubject"] as List<String>)
            {
                if (item == ViewBag.optionSubject)
                {
                    <option value="@item" selected>@item</option>
                }
                else
                {
                    <option value="@item">@item</option>
                }
            }
        }
    </select>
    &nbsp;
    <input type="text" name="questionTitle" id="txtQuestion" placeholder="Enter question title" />
    <input type="submit" id="_Filter" value="Filter" class="btn-primary" />
</form>

<br />

<table class="table" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                Question title
            </th>
            <th>
                Question type
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            String questionType = item.QuestionType ? "One Answer" : "Many Answer";
            String title;
            @if (item.QuestionTitle.Length >= 22)
            {
                title = item.QuestionTitle.Substring(0, 22) + "...";
            }
            else
            {
                title = item.QuestionTitle;
            }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @title
            </td>
            <td>
                @questionType
            </td>
            <td>
                @if (item.Photo == null)
                {
                    <p>Empty</p>
                }
                else
                {
                    <img src="~/@item.Photo" width="120" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuestionId" class="A_1">Edit</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.QuestionId" class="A_1">Details</a>
            </td>
            <td>
                <a asp-action="Delete" onclick="ConfirmDelete()" asp-route-id="@item.QuestionId" class="A_1">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
    function check() {
        document.getElementById("_Filter").click() = "true";
    }
</script>

<script>

    function ConfirmDelete() {
        if (confirm("Are you sure ?")) {
            return true;
        } else {
            event.preventDefault();
        }
    }
</script>

