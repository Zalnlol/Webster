@model WebsterWebApp.Areas.Admin.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h4>Details Question</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionType)
        </dt>
        <dd class = "col-sm-10">
            @{String questionType = Model.QuestionType ? "QuestionHasOneAnswer" : "QuestionHasManyAnswer";}
            @questionType
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Photo == null)
            {
                <img src="~/images/QA/260525402_1006620596585810_8289601711119089916_n.jpg" width="120" />

            }
            else
            {
                <img src="~/@Url.Content(Model.Photo)" width="120" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.QuestionId">Edit</a> &nbsp;
    <a asp-action="Index">Back to List</a>
</div>
