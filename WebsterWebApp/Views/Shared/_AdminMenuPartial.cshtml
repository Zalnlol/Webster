@using Microsoft.AspNetCore.Identity
@using WebsterWebApp.Data

@inject SignInManager<ApplicationUser> SigninManager
@inject UserManager<ApplicationUser> UserManager 

@if (SigninManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin")) 
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="CandidateList" asp-action="Index">Candidate List</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="UserList">User List</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Question" asp-action="Index">Question Management</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Answer" asp-action="Index">Answer Management</a>
        </div>
    </li>

}